<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="customer_app.Views.Components.navigationComponent">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <StackLayout>
                <Frame BackgroundColor="#FFFFFF">
                    <Shell.BackButtonBehavior>
                        <BackButtonBehavior Command="{Binding .}" TextOverride="Back">

                        </BackButtonBehavior>
                    </Shell.BackButtonBehavior>

                    <Label VerticalOptions="Center" HorizontalOptions="Center" Text= "{TemplateBinding Titles}" FontSize="16" TextColor="#0E0909"  ></Label>
                </Frame>

            </StackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>