<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:customer_app.ViewModels"
             x:Class="customer_app.Views.ResetPasswordNewPasswordPage">
    <ContentPage.BindingContext>
        <viewmodels:ResetPasswordNewPasswordViewModels/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Email}" Placeholder="Email"></Entry>
            <Button Text="Send New Password" Command="{Binding SendNewPassword}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>